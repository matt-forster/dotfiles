# Unix
alias l='ls -lah'
alias la='ls -lAh'
alias ll='ls -lh'
alias ls='ls --color=tty'
alias lsa='ls -lah'
alias md='mkdir -p'
alias rd=rmdir
alias ll="ls -lh"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

#postgres scripts
alias pg=call-pg

#docker scripts
alias av-stop='docker stop $(docker ps -f name=av -q)'
alias docker-purge='docker rmi -f $(docker images -a -q)'

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source $HOME/.aliases.local
