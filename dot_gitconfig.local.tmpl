[core]
{{ if eq .chezmoi.group "matt" }}  
  pager = diff-so-fancy | less --tabs=4 -RFX
  editor = nvim
{{ end }}
[pretty]
  colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset
[user]
  name = Matt Forster
  email = hey@mattforster.ca
{{ if eq .chezmoi.group "matt" }}  
  signingkey = 5DA07A957618798A 
{{ end }}
[commit]
  gpgsign = true
[alias]
  l =  log --pretty=colored --reverse -10
  sweep = !git sync && git purge && git clean -fdx
  cb = create-branch
  db = delete-branch
[init]
  defaultBranch = main
[diff]
  algorithm = patience

{{ if eq .chezmoi.group "matt" }}  
[interactive]
  diffFilter = "diff-so-fancy --patch"
{{ end }}
