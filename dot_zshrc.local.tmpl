{{- if eq .chezmoi.hostname "matt-desk" }}
# GPG Relay (Win only)

${HOME}/.ssh/win-gpg-agent-relay.sh start
export SSH_AUTH_SOCK=${HOME}/.gnupg/S.gpg-agent.ssh
card | ag --nocolor Signature

{{- end }}

# Secrets

export NPM_TOKEN={{ pass "autovance/npm/read" }}
export PAPERTRAIL_API_TOKEN={{ pass "autovance/papertrail" }}
export GITHUB_TOKEN={{ pass "github/token/cli" }}
export SNYK_TOKEN={{ pass "autovance/snyk" }}
export BW_SESSION={{ pass "bitwarden/session" }}

# Variables

export VAULT_ADDR_PRODUCTION={{pass "autovance/vault/url/production" }}
export VAULT_ADDR_STAGING={{pass "autovance/vault/url/staging" }}
export VAULT_ADDR=$VAULT_ADDR_PRODUCTION
export VAULT_CACERT=$AUTOVANCE/certificates/autovance.ca.cert.pem
export AV_PUBLIC_KEY_PATH=/Users/matt/autovance/certificates/autovance.wild.cert.pem
export AV_PRIVATE_KEY_PATH=/Users/matt/autovance/certificates/autovance.private.pem

export VISUAL='nvim'
export EDITOR="$VISUAL"
export TZ_LIST='America/New_York,America/St_Johns,Etc/UTC'

export VOLTA_HOME=$HOME/.volta

SPACESHIP_PACKAGE_SHOW=false
SPACESHIP_DOCKER_SHOW=false
SPACESHIP_VI_MODE_SHOW=false
SPACESHIP_GIT_STATUS_PREFIX=" "
SPACESHIP_GIT_STATUS_SUFFIX=""
SPACESHIP_GIT_STATUS_COLOR="068"
SPACESHIP_AWS_PREFIX=""
SPACESHIP_AWS_SUFFIX=" "

# Path
export PATH="$PATH:$HOME/.local/bin"
export PATH="$PATH:/usr/local/go/bin"
export GOPATH="$HOME/.go"
export PATH="$VOLTA_HOME/bin:$PATH"

# Source

{{- if eq .chezmoi.os "linux" }}
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
{{- end}}
plugins=(git npm aws)
autoload -U +X bashcompinit && bashcompinit
bindkey "^[[3~" delete-char

source ~/.zsh_plugins.sh
. $HOME/.asdf/asdf.sh

SPACESHIP_NODE_DEFAULT_VERSION=$(node --version)

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

